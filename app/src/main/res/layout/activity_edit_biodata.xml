<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#607998"
    tools:context=".EditBiodataActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <EditText
                android:id="@+id/editTextNIP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="NIP" />

            <EditText
                android:id="@+id/editTextJenisKelamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextNIP"
                android:layout_marginBottom="16dp"
                android:hint="Jenis Kelamin" />

            <EditText
                android:id="@+id/editTextTempatTanggalLahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextJenisKelamin"
                android:layout_marginBottom="16dp"
                android:hint="Tempat/Tanggal Lahir" />

            <EditText
                android:id="@+id/editTextAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextTempatTanggalLahir"
                android:layout_marginBottom="16dp"
                android:hint="Alamat" />

            <Button
                android:id="@+id/buttonSimpan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextAlamat"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Simpan" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
